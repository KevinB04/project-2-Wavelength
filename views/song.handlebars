<div class="row">
  <div class="col s2"></div>
  <div class="col s8">
    <div class="card">
      <div class="card-content">
        <h1>"{{title}}"</h1>
        <h2>{{artist}}</p>
          <iframe src="https://open.spotify.com/embed/track/{{url}}" width=" 300" height="380" frameborder="0"
            allowtransparency="true" allow="encrypted-media"></iframe>
          <p>Likes: {{rating}}</p>
          <button class="waves-effect waves-yellow btn-large upvote" data-id="{{id}}">I Like It!</button>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function () {
    $(".upvote").on("click", function () {
      const idToIncrement = $(this).data("id");
      console.log(idToIncrement);

      $.ajax({
        url: `/api/songs/upvote/${idToIncrement}`,
        method: "PUT",
      }).then(response => {
        console.log("Upvote Successful");
      })
    })
  })
</script>

