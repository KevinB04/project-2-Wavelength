
<div class="row">
    <div class="col s2"></div>
    <div class="col s8">
        <div class="card">
            <div class="card-content">
                {{#each songs}}
                <h1><a href="/songs/{{id}}">"{{title}}"</a></h1>
                <h2>{{artist}}</h2>
                <h2>Likes: {{rating}}</h2>
                <a class="waves-effect waves-yellow btn-large" href="/songs/{{id}}/edit">Edit Song</a>
                <button class="waves-effect waves-yellow btn-large delete" data-id="{{id}}">Delete Song</button>
                <br>
                {{/each}}
            </div>

        </div>
    </div>
</div>



<style>
    body {
        background-image: URL(https://images.wallpapersden.com/image/download/synthwave-and-retrowave_a2tpbmyUmZqaraWkpJRobWllrWdma2U.jpg);
        background-size: cover;
        background-repeat: no-repeat;
    }

    .card {
        text-align: center;
        margin: 0% 20% 0% 20%;
        background-color: rgba(0, 0, 0, 0.842);
        color: #30d7a9;
    }

    h1, h2 {
        font-family: 'Allan', cursive;
    }

</style>